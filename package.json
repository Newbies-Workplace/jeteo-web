{
  "name": "jeteo-web",
  "version": "0.1.2",
  "description": "",
  "private": "true",
  "main": "src/index.ts",
  "scripts": {
    "dev": "vite --host",
    "preview": "vite preview --host",
    "prod": "npm run build && node server.js",
    "build": "vite build",
    "release": "standard-version",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint --fix src/**/*.{ts,tsx}",
    "test": "jest --passWithNoTests",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Newbies-Workplace/jeteo-web.git"
  },
  "author": "rstnewbies",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": [
        "npm run lint",
        "npm test"
      ]
    }
  },
  "standard-version": {
    "releaseCommitMessageFormat": "[skip ci] chore(release): {{currentTag}}"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "@typescript-eslint"
    ],
    "rules": {},
    "ignorePatterns": [
      "/__utils__/",
      "webpack.*.*",
      "./node_modules/**",
      "./dist/**"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.ts"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "axios": "^0.23.0",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.26.0",
    "formik": "^2.2.9",
    "husky": "^7.0.2",
    "jest-mock-axios": "^4.4.1",
    "jwt-decode": "^3.1.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.2",
    "sass": "^1.49.9",
    "standard-version": "^9.3.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@babel/runtime": "^7.15.4",
    "@vitejs/plugin-react": "^1.2.0",
    "express": "^4.17.1",
    "express-history-api-fallback": "^2.2.1",
    "vite": "^2.8.4",
    "vite-plugin-svgr-component": "^1.0.0"
  }
}
