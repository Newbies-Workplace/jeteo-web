{
    "compilerOptions": {
        "outDir": "out",
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "jsx": "react-jsx",
        //dev stuff
        "sourceMap": true,
        "typeRoots": [
            "src/types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/",
        "vite.config.ts"
    ],
    "exclude": [
        "out/**"
    ]
}